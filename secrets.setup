#!/bin/bash

#############################################################################
#
#   initialization for secrets
#
#############################################################################

declare -r secrets_dir="${SECRETS_DIR:?}" 
[ -d "${secrets_dir}" ] && exit 0

declare -r setup_dir="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")" 

mkdir -p .secrets ||:
cp "${setup_dir}/secrets"/* "${secrets_dir}"/
